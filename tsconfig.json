{
  "extends": "@alleyinteractive/tsconfig/base.json",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": [
    "vendor",
    "node_modules",
    "build/**/*"
  ]
}
